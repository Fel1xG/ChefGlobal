<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preguntas Frecuentes"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Pregunta 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cómo puedo crear una cuenta en ChefGlobal?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para crear una cuenta en ChefGlobal, sigue estos pasos:"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Abre la aplicación ChefGlobal en tu dispositivo."
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Toca el botón 'Registrarse' en la pantalla de inicio."
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Completa el formulario de registro con tu información personal."
        android:textSize="16sp"/>

    <!-- Pregunta 2 (Cambiada) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¿Cómo puedo encontrar recetas?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para buscar recetas, sigue estos pasos:"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Abre la aplicación ChefGlobal en tu dispositivo."
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Toca el icono de búsqueda en la parte inferior de la pantalla."
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Ingresa palabras clave relacionadas con la receta que deseas encontrar."
        android:textSize="16sp" />

    <!-- Agrega más preguntas y respuestas según sea necesario -->

    <Button
        android:id="@+id/btnBackToAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a Ayuda"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>

